<div class="form-group">
    <label for="title">כותרת</label>
    <input required type="text" name="title" id="title" class="form-control" value="<%= article.title %>" >
</div>
<div class="form-group">
    <label for="Description">הסבר</label>
    <textarea name="description" id="description" cols="30" rows="10" class="form-control">
        <%= article.description %>
    </textarea>
</div>

<div class="form-group">
    <label for="Markdown">סימניות</label>
    <textarea required name="markdown" id="markdown" cols="30" rows="10" class="form-control">
        <%= article.markdown %>
    </textarea>
</div>
<a href="/" class="btn btn-secondary">ביטול</a>
<button type="submit" class="btn btn-primary">שמור</button>